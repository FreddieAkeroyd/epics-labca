#CONFIG

# Chose what interface to build. May be
# 'MATLAB' or 'SCILAB' (any string other
# than 'MATLAB' builds 'SCILAB')

MAKEFOR=SCILAB

# optionally, set installation top directory
#INSTALL_LOCATION=/install/everything/here

# No need to change anything below here
# (except for adding more matlab extensions for
# other platforms...)
MEXEXT_hpux=.mexhpux
MLBARCH_hpux=hpux
MEXEXT_Linux=.mexglx
MLBARCH_Linux=glnx86
# glnxi64 not supported by EPICS yet
MEXEXT_solaris=.mexsol
MLBARCH_solaris=sol2
MEXEXT_Darwin=.mexmac
MLBARCH_Darwin=mac
MEXEXT=$(MEXEXT_$(ARCH_CLASS))
MLBARCH_WIN32=win32
MLBARCH=$(MLBARCH_$(ARCH_CLASS))

# install matlab executables and help files
# to a 'labca' subdir so 'help labca' lists
# the 'Contents.m' summary
ifeq ($(MAKEFOR),MATLAB)
INSTALL_BIN:=$(INSTALL_BIN)/labca
endif

CROSS_COMPILER_TARGET_ARCHS =
